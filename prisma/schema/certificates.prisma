model Certificate {
  id                       Int                    @id @default(autoincrement())
  templateId               Int
  studentId                Int
  templateRecipientGroupId Int
  releaseDate              DateTime
  verificationCode         String                 @unique @db.VarChar(255)
  deletedAt                DateTime?
  createdAt                DateTime
  updatedAt                DateTime
  template                 Template              @relation(fields: [templateId], references: [id])
  student                  Student               @relation(fields: [studentId], references: [id])
  templateRecipientGroup   TemplateRecipientGroup @relation(fields: [templateRecipientGroupId], references: [id])

  @@unique([templateId, studentId], name: "unique_student_template_certificate")
}
