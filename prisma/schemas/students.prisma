model Students {
    recipientGroupItems TemplateRecipientGroupItems[]
    certificates        Certificates[]
    id                  Int                           @id @default(autoincrement())
    name                String                        @db.VarChar(255)
    email               String?                       @db.VarChar(255)
    phoneNumber         String?                       @db.VarChar(255)
    dateOfBirth         DateTime?
    gender              Gender?
    nationality         CountryCode?
    deletedAt           DateTime?
    createdAt           DateTime
    updatedAt           DateTime
}

enum Gender {
    MALE
    FEMALE
    OTHER
}

enum CountryCode {
    EG
    US
    // Add more as needed
}
