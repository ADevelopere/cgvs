{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"],
        "plugins": [
            {
                "name": "@0no-co/graphqlsp",
                "schema": "./schema.graphql"
            }
        ]
    },
    "include": ["./**/*.ts"]
}
