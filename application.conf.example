# Application Configuration Example
# Copy this file to src/main/resources/application.conf and customize for your environment

app {
    # Set to true to seed demo data on startup
    seedDemoData = true
}

# Database configuration
database {
    url = "jdbc:mysql://localhost:3306/cgsv"
    driver = "com.mysql.cj.jdbc.Driver"
    user = "your_db_user"
    password = "your_db_password"
}

# Google Cloud Storage configuration
gcs {
    bucketName = "your-bucket-name"
    credentialsPath = "path/to/service-account-key.json"
}

# JWT Configuration
jwt {
    secret = "your-jwt-secret-key-here"
    domain = "your-domain.com"
    audience = "your-audience"
}

# Server configuration
ktor {
    deployment {
        port = 8080
        port = ${?PORT}
    }
    application {
        modules = [ ApplicationKt.module ]
    }
}